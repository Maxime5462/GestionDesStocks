{% extends 'base.html.twig' %}

{% block titre %}
  {{ article.name }}
{% endblock %}
{% block contenu %}
  {% if isModification %}
    <form method="POST" action="/articles/modificationServer">
      <div class="row m-2">
        <div class="col-6">
          <h2>
            Informations :
          </h2>
          <div class="form-group">
            <label for="ref">Référence</label>
            <input type="text"
              class="form-control"
              id="ref"
              name="ref"
              value="{{ article.ref }}" />
          </div>
          <div class="form-group">
            <label for="quantity">Quantité</label>
            <input type="number"
              class="form-control"
              id="quantity"
              name="quantity"
              value="{{ article.quantity }}" />
          </div>
          <div class="form-group">
            <label for="nom">Nom</label>
            <input type="text"
              class="form-control"
              id="nom"
              name="nom"
              value="{{ article.nom }}" />
          </div>
          <div class="col-6">
            <h2>
              Description :
            </h2>
            <div class="form-group">
              <label for="description">Description</label>
              <textarea class="form-control"
                id="description"
                name="description"
                rows="3">
                {{ article.description }}
              </textarea>
            </div>
          </div>
          <div class="form-group">
            <label for="marque">Marque</label>
            <select class="form-control" id="marque" name="marque">
              <option value="">
                --Please choose an option--
              </option>
              <option value="Tamtung">
                Tamtung
              </option>
              <option value="Tony">
                Tony
              </option>
              <option value="LBJ">
                LBJ
              </option>
              <option value="Loose">
                Loose
              </option>
              <option value="Poignée">
                Poignée
              </option>
            </select>
          </div>
          <div class="form-group">
            <label for="category">Catégorie</label>
            <select class="form-control" id="category" name="category">
              <option value="">
                --Please choose an option--
              </option>
              <option value="Appareil photo">
                Appareil photo
              </option>
              <option value="TV">
                TV
              </option>
              <option value="Son">
                Son
              </option>
              <option value="Téléphone">
                Téléphone
              </option>
              <option value="Caméra">
                Caméra
              </option>
              <option value="GPS">
                GPS
              </option>
              <option value="Ordinateur">
                Ordinateur
              </option>
            </select>
          </div>
        </div>
      </div>
      <input type="hidden" name="identifiant" value="{{ article._id }}" />
      <input type="submit" class="btn btn-primary w-100" value="Valider" />
    </form>
  {% else %}
    <div class="row m-2">
      <div class="col-6">
        <h2>
          Informations :
        </h2>
        <div>
          Nom : {{ article.nom }}
        </div>
        <div>
          Quantity : {{ article.quantity }}
        </div>
      </div>
      <div class="col-6">
        <h2>
          description :
        </h2>
        <div>
          {{ article.description }}
        </div>
      </div>
    </div>
  {% endif %}
{% endblock %}
